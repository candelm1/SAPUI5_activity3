var height = 5;
var i = 0;

while (i < height) {
    let spaces = '';
    let stars = '';
    let j = 0;

    // for adding leading spaces
    while (j < i) {
        spaces += '  '; //addition of space-double space
        j++;
    }

    // for adding stars
    j = 0;
    while (j < height - i) {
        stars += '* '; //addition of star-with space since it is a double space
        j++;
    }

    console.log(spaces + stars);
    i++;
}
